<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="TextViewCustomFont">
        <attr name="fontName" />
    </declare-styleable>

    <declare-styleable name="EditTextCustomFont">
        <attr name="fontName" />
    </declare-styleable>

    <declare-styleable name="ButtonCustomFont">
        <attr name="fontName" />
    </declare-styleable>

    <declare-styleable name="RadioButtonCustomFont">
        <attr name="fontName" />
    </declare-styleable>

    <declare-styleable name="CheckBoxCustomFont">
        <attr name="fontName" />
    </declare-styleable>
</resources>
